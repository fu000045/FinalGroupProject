<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie Title:"
        android:id="@+id/movie_title_framelayout" />
    <EditText
        android:id="@+id/edittext_movieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/movie_title_framelayout"/>

    <TextView
        android:id="@+id/movie_actor_framelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Actors:"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edittext_movieTitle" />

    <EditText
        android:id="@+id/edittext_mainActors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/movie_actor_framelayout"
        android:layout_below="@+id/edittext_movieTitle"/>

    <TextView
        android:id="@+id/movie_length_framelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Length:"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edittext_mainActors" />
    <EditText
        android:id="@+id/edittext_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/movie_length"
        android:layout_below="@+id/edittext_mainActors" />


    <TextView
        android:id="@+id/movie_genre_framelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre:"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edittext_length" />
    <EditText
        android:id="@+id/edittext_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/movie_genre_framelayout"
        android:layout_below="@+id/edittext_length"/>

    <TextView
        android:id="@+id/movie_description_framelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edittext_genre"/>
    <EditText
        android:id="@+id/edittext_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/movie_description_framelayout"
        android:layout_below="@+id/edittext_genre"/>

    <TextView
        android:id="@+id/id_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_description"/>

    <Button
    android:id="@+id/update_movie"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/button_update"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/delete_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_delete"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
